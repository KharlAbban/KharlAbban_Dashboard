<h1>Details Of A Recipe Here</h1>
<% if (recipe != null) { %>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/home">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/home/recipes">Recipes</a></li>
        <li class="breadcrumb-item active"><%= recipe.name %></li>
    </ol>
</nav>


<div class="row">
    <div class="col-12 col-md-4">
        <img src="/uploads/<%= recipe.image %>" alt="<%- recipe.name %>" class="img-fluid sticky-top">
    </div>
    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12"><h1><%= recipe.name %></h1></div>
            <div class="col-12 col-mb-4"><i class="bi bi-tag"></i> <%= recipe.category%> </div>
            <div class="col-12" style="white-space: pre-line;">
                <h4>Cooking Instructions</h4>
                <p><%= recipe.description %></p>
            </div>
            <div class="row pt-3">
                <div class="col-12">
                    <h4>Ingredients</h4>
                    <ul class="list-group list-group-flush">
                        <% recipe.ingredients.forEach(ingredient => { %>
                            <li class="list-group-item">
                                <%= ingredient %>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<% }else { %>
    <p class="text-center">WTF is this recipe? <br> I don't have it here! </p>
<% } %>